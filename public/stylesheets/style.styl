/*CSS for Ctchme homepage*/
/*Version: 0.1*/
/*Authored: @bwhitham*/

//styl variables
softyellow = #ddd390
rust = #b6441a
softrust = #e6b6a4
darkrust = #894931
ltgray = #c6ced3
gray = #91845a
darkgray = #969696

darkyellow = #bab382
ltyellowgray = #efe8ce
yellowgray = #c9c3ab
darkyellowgray = #a5a08c

ctchmesprite = url('/images/ctchmesprite.png')
white70 = rgba(255, 255, 255, 0.7)

box-shadow()
	-moz-box-shadow arguments
	-webkit-box-shadow arguments
	-o-box-shadow arguments

transition()
	-moz-transition arguments
	-webkit-transition arguments
	-o-transition arguments
/*__________________________________________________________ universals*/

*
	margin 0
	padding 0 
	outline none
	border none
	list-style none

.clear
	clear both

::-moz-selection
	
	color inherit
	text-shadow none

::selection
	
	color inherit
	text-shadow none


/*__________________________________________________________ typography*/

html
	font-size 100%
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	font-family sans-serif

p
	font-size 1em

h1, h2, h3, h4
	font-size 2em

a
	color nodeph-blue
	text-decoration underline

/*__________________________________________________________ structure*/

html
	width 100%
	height 100%
	background url('/images/bgimage.jpg') repeat top left
	overflow hidden

body
	width 100%
	height 100%
	position relative

section.home
	background url('/images/ctchme-home-bg.jpg') no-repeat center center fixed
	width 100%
	height 100%
	margin 0 auto 0 auto

header.global
	width 100%
	height 55px
	position fixed
	top 0
	left 0
	border-top 2px softrust solid
	background-color rust
	opacity 0.8
	box-shadow 0 1px 5px black

nav.global
	width auto
	height auto
	background-color white70
	box-shadow 0 0 10px darkyellow
	position fixed
	top 25px
	left 25px
	border-top 3px solid white
	

	a
		display block
		width inherit
		padding 20px 5px 20px 15px
		background-color ltyellowgray
		position relative
		color darkyellowgray
		text-decoration none
		border-bottom yellowgray 2px solid
		border-top white 2px solid
		letter-spacing 2px
		transition all ease 0.3s
		font-weight normal
	
	a.logo
		background ctchmesprite no-repeat 0 0
		width 140px
		height 140px
		margin 10px 35px 0 35px
		padding 0
		border none

	a:hover
		box-shadow inset 0 0 15px yellowgray

	a:active
		box-shadow inset 0 3px 10px darkyellowgray
		transition none
		padding 22px 5px 18px 15px

	a:nth-child(2)
		border-top yellowgray 2px solid

	a.logo:hover, a.logo:active
		box-shadow none
		padding 0

